<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @title %>!</h3>
  </div>

<% if  @widget.cart[:count] > 0%>
  <table class="table">
  <% @widget.cart[:items].each do |item| %>
    <tr>
      <td><%= item['Name'] %></td>
      <td><%= item['Price'] %> р.</td>
    </tr>
  <% end -%>
  </table>
  <% else %>
  <div class="panel-body">
    <p>В корзине пусто...</p>
  </div>
  <% end -%>

</div>
