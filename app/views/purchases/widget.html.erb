<div class="panel">

<% if @widget.order_products.size > 0 %>
  <table class="table">
    <% @widget.order_products.each do |product| %>
    <tr>
      <td><span class="glyphicon glyphicon-ok"></span> <%= product[:offering]['Name'] %></td>
    </tr>
    <tr>
      <td><span class="glyphicon glyphicon-ok"></span> Период обслуживания - <%= product[:price]['Name'] %></td>
    </tr>
    <tr>
      <td> <span class="text-muted">Цена:</span> <%= number_to_currency(@widget.order['Amount'], locale: :ru, precision: 0) %></td>
    </tr>
    <% end %>
  </table>

  <div class="panel-body">
    <form action="<%= @widget.target_url %>" method="post" target="_blank">
        <input type="hidden" name="PaymentType" value="qiwi">
        <input type="hidden" name="Qiwi.PayerPhone" value="<%= @current_user_phone %>">
        <input type="hidden" name="Receipt.FIO" value="<%= @current_user.first_name %> <%= @current_user.last_name %>">
        <input type="hidden" name="Receipt.Address" value="">
        <button type="submit" class="btn btn-warning btn-sm"> Оплатить </button>
    </form>
  </div>

  <% else %>
  <div class="panel-body">
    <p>В корзине пусто...</p>
  </div>
  <% end -%>

</div>
